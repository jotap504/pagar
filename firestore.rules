rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Reglas para la colecci칩n de usuarios
    // Solo el due침o de la cuenta puede leer y escribir su documento
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Permitir acceso a la subcolecci칩n de historial
      match /history/{logId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Reglas para la colecci칩n de dispositivos
    // Permite buscar si un dispositivo existe y vincularlo
    match /devices/{deviceId} {
      allow read, write: if request.auth != null;
    }
  }
}
